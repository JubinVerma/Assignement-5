<div class="navbar bg-base-100">
  <div class="flex-1">
    <a class="btn btn-ghost text-xl" href="/">Climate Solutions</a>
  </div>
  <div class="flex-none gap-2"> 
    <% if (showSearchBar) { %>
    <div class="form-control">
      <form action="/solutions/projects" method="get">
      <input type="text" placeholder="Search" class="input input-bordered w-24 md:w-auto" name="sector"/>
      </form>
    </div>
    <% } %>
    <div class="dropdown">
      <label tabindex="0" class="btn btn-ghost sm:hidden">
          <svg 
            xmlns="http://www.w3.org/2000/svg" 
            class="w-6 h-6" 
            fill="none" 
            viewBox="0 0 24 24" 
            stroke="currentColor">
          <path 
            stroke-linecap="round" 
            stroke-linejoin="round" 
            stroke-width="2" 
            d="M4 6h16M4 12h16m-7 6h7" />
          </svg>
        </label>
        <ul tabindex="0" class="menu menu-sm dropdown-content right-0 mt-3 z-[1] p-2 shadow bg-base-100 rounded-box w-52">
          <li>
            <a href="/solutions/projects" class="<%= (page == '/solutions/projects') ? 'active': '' %>" >View Projects</a> 
          </li>
          <!-- if user logged in -->
          <% if (session.user) { %>
            <li>
              <details>
              <summary>Account: <%= session.user.userName %></summary>
              <ul class="p-2 right-0">
              <li><a class="<%= (page == '/solutions/addProject') ? 'active' : '' %>" href="/solutions/addProject">Add Project</a></li>
              <li><a class="<%= (page == '/userHistory') ? 'active' : '' %>" href="/userHistory">User History</a></li>
              <li><a href="/logout">Log Out</a></li>
              </ul>
              </details>
              </li>
          <% } else { %>
              <li>
                  <details>
                  <summary>Account</summary>
                  <ul class="p-2 right-0">
                  <li><a class="<%= (page == '/login') ? 'active' : '' %>" href="/login">Login</a></li>
                  <li><a class="<%= (page == '/register') ? 'active' : '' %>" href="/register">Register</a></li>
                  </ul>
                  </details>
              <li>
          <% } %>
            <a href="/about" class="<%= (page == '/about') ? 'active': '' %>" >About</a>
          </li>
          
    </ul>
  </div>
  <div class="navbar-center hidden sm:flex gap-2">
      <ul tabindex="0" class="menu menu-horizontal bg-base-100 z-[1] w-26 py-2 pl-2 pr-0 shadow">
              <li>
                <a href="/solutions/projects" class="<%= (page == '/solutions/projects') ? 'active': '' %>" >View Projects</a> 
              </li>

              <!-- if user logged in -->
              <% if (session.user) { %>
                <li>
                  <details>
                  <summary>Account: <%= session.user.userName %></summary>
                  <ul class="p-2 right-0">
                  <li><a class="<%= (page == '/solutions/addProject') ? 'active' : '' %>" href="/solutions/addProject">Add Project</a></li>
                  <li><a class="<%= (page == '/userHistory') ? 'active' : '' %>" href="/userHistory">User History</a></li>
                  <li><a href="/logout">Log Out</a></li>
                  </ul>
                  </details>
                  </li>
              <% } else { %>
                <li>
                    <details>
                    <summary>Account</summary>
                    <ul class="p-2 right-0">
                    <li><a class="<%= (page == '/login') ? 'active' : '' %>" href="/login">Login</a></li>
                    <li><a class="<%= (page == '/register') ? 'active' : '' %>" href="/register">Register</a></li>
                    </ul>
                    </details>
                  </li>
              <% } %>
             <li>
                <a href="/about" class="<%= (page == '/about') ? 'active': '' %>" >About</a>                
             </li>
        </ul>
  </div>
</div>
</div>
</div>